# Monitoring Configuration
# Copy this file to .env and update with your actual values

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=development
APP_VERSION=1.0.0

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Alerting Configuration
ALERTMANAGER_URL=http://localhost:9093
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ckempire.log

# Monitoring Endpoints
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health
READY_ENDPOINT=/ready

# Business Metrics Thresholds
REVENUE_WARNING_THRESHOLD=1000
REVENUE_CRITICAL_THRESHOLD=500
ERROR_RATE_WARNING_THRESHOLD=0.05
ERROR_RATE_CRITICAL_THRESHOLD=0.1
RESPONSE_TIME_WARNING_THRESHOLD=2.0
RESPONSE_TIME_CRITICAL_THRESHOLD=5.0

# AI Service Monitoring
AI_SERVICE_TIMEOUT=30
AI_SERVICE_RETRY_ATTEMPTS=3
AI_SERVICE_RATE_LIMIT=100

# Database Monitoring
DB_CONNECTION_TIMEOUT=10
DB_QUERY_TIMEOUT=30
DB_MAX_CONNECTIONS=20

# Cloud Service Monitoring
CLOUD_BACKUP_RETENTION_DAYS=30
CLOUD_BACKUP_CHECK_INTERVAL=3600
CLOUD_STORAGE_WARNING_THRESHOLD=0.8
CLOUD_STORAGE_CRITICAL_THRESHOLD=0.95 