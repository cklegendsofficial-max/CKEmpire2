# Database Configuration
DB_URL=sqlite:///./ckempire.db
# For PostgreSQL: postgresql://username:password@localhost:5432/ckempire

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME=Advanced CK Empire Builder
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# AI Settings
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Ethics Module
ETHICS_ENABLED=True
BIAS_DETECTION_THRESHOLD=0.8

# Video Generation
VIDEO_OUTPUT_DIR=generated_videos
VIDEO_MAX_DURATION=300

# NFT Settings
NFT_CONTRACT_ADDRESS=your-nft-contract-address
WEB3_PROVIDER_URL=your-web3-provider-url

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=True
GRAFANA_ENABLED=True 