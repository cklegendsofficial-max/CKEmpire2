# CK Empire Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://ckempire_user:ckempire_password@localhost:5432/ckempire_db
DATABASE_TEST_URL=postgresql://ckempire_user:ckempire_password@localhost:5432/ckempire_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Multi-Region AWS Configuration
AWS_REGIONS=us-east-1,eu-west-1,ap-southeast-1,us-west-2
AWS_PRIMARY_REGION=us-east-1
AWS_SECONDARY_REGIONS=eu-west-1,ap-southeast-1,us-west-2

# RDS Global Cluster Configuration
RDS_GLOBAL_CLUSTER_IDENTIFIER=ckempire-global-cluster
RDS_MASTER_USERNAME=ckempire_admin
RDS_MASTER_PASSWORD=your-rds-master-password
RDS_ENGINE=aurora-postgresql
RDS_ENGINE_VERSION=14.7
RDS_DATABASE_NAME=ckempire_db
RDS_STORAGE_ENCRYPTED=true
RDS_DELETION_PROTECTION=true
RDS_BACKUP_RETENTION_PERIOD=7
RDS_PREFERRED_BACKUP_WINDOW=03:00-04:00
RDS_PREFERRED_MAINTENANCE_WINDOW=sun:04:00-sun:05:00

# Load Balancer Configuration
LOAD_BALANCER_TYPE=application
LOAD_BALANCER_SCHEME=internet-facing
LOAD_BALANCER_IP_ADDRESS_TYPE=ipv4
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30
LOAD_BALANCER_HEALTH_CHECK_TIMEOUT=5
LOAD_BALANCER_HEALTHY_THRESHOLD=2
LOAD_BALANCER_UNHEALTHY_THRESHOLD=2

# Route53 Configuration
ROUTE53_HOSTED_ZONE_ID=your-hosted-zone-id
ROUTE53_DOMAIN_NAME=ckempire.com
ROUTE53_SSL_CERTIFICATE_ARN=your-ssl-certificate-arn

# Kubernetes Configuration
KUBERNETES_NAMESPACE=ckempire
KUBERNETES_CLUSTER_NAME=ckempire-cluster
KUBERNETES_NODE_GROUP_NAME=ckempire-node-group

# HPA Configuration
HPA_MIN_REPLICAS_BACKEND=5
HPA_MAX_REPLICAS_BACKEND=20
HPA_MIN_REPLICAS_FRONTEND=3
HPA_MAX_REPLICAS_FRONTEND=15
HPA_MIN_REPLICAS_CELERY=3
HPA_MAX_REPLICAS_CELERY=10
HPA_CPU_TARGET_UTILIZATION=70
HPA_MEMORY_TARGET_UTILIZATION=80

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
SENTRY_DSN=your-sentry-dsn
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Cloud Storage Configuration
AWS_S3_BUCKET=ckempire-storage
AWS_S3_REGION=us-east-1
GOOGLE_CLOUD_STORAGE_BUCKET=ckempire-storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/ckempire.log

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Development Configuration
DEBUG=true
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1,ckempire.com

# Production Configuration
# DEBUG=false
# ENVIRONMENT=production
# CORS_ORIGINS=https://ckempire.com,https://www.ckempire.com
# ALLOWED_HOSTS=ckempire.com,www.ckempire.com 