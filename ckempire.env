# CK Empire Builder Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=sqlite:///./ckempire.db
# For PostgreSQL: postgresql://username:password@localhost:5432/ckempire

# Encryption
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Security
SECRET_KEY=your_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME=Advanced CK Empire Builder
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# AI Settings
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Ethics Module
ETHICS_ENABLED=true
BIAS_DETECTION_THRESHOLD=0.8

# Video Generation
VIDEO_OUTPUT_DIR=output/videos
VIDEO_MAX_DURATION=300
DAVINCI_PATH=/path/to/davinci/resolve
CAPCUT_PATH=/path/to/capcut

# NFT Settings
NFT_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_project_id

# Ethereum Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ETHEREUM_PRIVATE_KEY=your_private_key_here
ETHEREUM_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# OpenSea API
OPENSEA_API_KEY=your_opensea_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ckempire.log

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Performance
CACHE_TTL=3600
MAX_CONNECTIONS=100

# Development
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000 